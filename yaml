stages:
  - setup
  - lint
  - test
  - deploy

setup:
  stage: setup
  script:
    - echo "Setting up Python environment..."
    - python -m venv venv
    - source venv/bin/activate
    - pip install -r requirements.txt

lint:
  stage: lint
  script:
    - source venv/bin/activate
    - flake8 .

test:
  stage: test
  script:
    - source venv/bin/activate
    - pytest

deploy:
  stage: deploy
  script:
    - source venv/bin/activate
    - echo "Deploying application..."
    - ./deploy.sh
  only:
    - master
